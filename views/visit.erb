<h2><%=@h1%></h2>

    <%if @complete_to then %>
         <div class="alert alert-primary" role="alert"><%=@complete_to%></div>
    <% end %>

<form action='/visit' method="POST">

    <div class="row">
        <div class="col">
        <label for="exampleInputPassword1">Вашем Имя</label>
        <input required type="text" class="form-control" name="name" oninvalid="this.setCustomValidity('Пожалуйста введите имя')" oninput="setCustomValidity('')" >
        </div>

        <div class="col">
                <label for="exampleInputPassword1">Дата записи</label>
                <!-- <input required class="form-control" type="date" name="date"  oninvalid="this.setCustomValidity('Please Enter valid email')" oninput="setCustomValidity('')" > -->
                <input required class="form-control form_datetime" name="date" readonly oninvalid="this.setCustomValidity('Укажите дату записи')" oninput="setCustomValidity('')" >
                <!-- <div class="input-group date"> -->
            <%# </div> %>
        </div>
    </div>
<br>
    <div class="row">
        <div class="col">
        <label for="exampleInputPassword1">Ваш телефон</label>
        <!-- <input required="" type="text" class="form-control" placeholder="+7 xxx xxx-xx-xx" name="phone"  oninvalid="this.setCustomValidity('Please Enter valid email')" oninput="setCustomValidity('')" > -->
        <input required="" name="phone" type="text" class="form-control input-medium bfh-phone" data-format="+7 (ddd) ddd-dddd" oninvalid="this.setCustomValidity('Введите номер телефона')" oninput="setCustomValidity('')" >
        
        </div>
        <div class="col">
        <label for="exampleInputEmail1">Ваш e-mail</label>
        <input required type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="вашеимя@maildomain.ru" name="email"  oninvalid="this.setCustomValidity('Введите email')" oninput="setCustomValidity('')">
        <small id="emailHelp" class="form-text text-muted">Мы не передаем ваш e-mail третьим лицам</small>
        </div>
    </div>
    
  <div class="form-group">
    <label for="exampleSelect1">Выберите барбера</label>
    <select class="form-control" name="barber">


       <!-- <option>Walter White</option>
        <option>Jessie Pincman</option>
        <option>Gus Fring</option> -->

    <% @barberdb.each { |row|  %>  
    <%= " <option>  #{row['name']} </option> "  %>
    <% } %>


    </select>
  </div>

<div class="mx-auto" style="width: 200px;">
    <button type="submit" class="btn btn-success">Записать меня</button>
</div>

</form>

<script type="text/javascript">
$(function() {
  // тут я могу написать любой javascript код, который исполнится
  // после загрузки страницы

$(".form_datetime").datetimepicker({
        
        language:  'ru',
        daysOfWeekDisabled: [5, 6],
        format: "dd.mm.yyyy hh:ii",
        autoclose: true,
        todayBtn: true,
        minuteStep: 30

});
});
</script>

